<div ng-controller="newArticleController">

    <label>Submit a new article</label>
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" ng-model="title"></input>
    </div>
    <div class="form-group">
      <label>URL</label>
      <input class="form-control" ng-model="link"></input>
    </div>
    <div class="form-group">
      <label>Author</label>
      <input class="form-control" ng-model="author"></input>
    </div>
    <div class="form-group">
      <label>Summary title</label>
      <input class="form-control" ng-model="descriptionTitle"></input>
    </div>
    <div class="form-group">
      <label>Summary</label>
      <p>You will be able to add more description sections after you submit</p>
      <input class="form-control" ng-model="description"></input>
    </div>
    <div class="form-group">
      <button class="btnS btn-primary btn" ng-click="submit()">Submit</button>
    </div>

</div>
