<div ng-controller="newArticleController">
  <div class="col-md-8">
  <h1>Submit a new article</h1>
    <hr>

    <div class="form-group">
      <label>Title</label>
      <input class="form-control" ng-model="title"></input>
    </div>
    <div class="form-group">
      <label>URL</label>
      <input class="form-control" ng-model="link"></input>
    </div>
    <div class="form-group">
      <label>Author</label>
      <input class="form-control" ng-model="author"></input>
    </div>
    <div class="form-group">
      <label>Summary title</label>
      <input class="form-control" ng-model="descriptionTitle"></input>
    </div>
    <div class="form-group">
      <label>Summary</label>
      <p>You will be able to add more description sections after you submit</p>
      <textarea class="form-control" rows="4" ng-model="description"></textarea>
    </div>

    <div class="form-group">
      <label>Image URL</label>
      <input class="form-control" ng-model="image"></input>
    </div>

    <div class="form-group">
      <button class="btnS btn-primary btn" ng-click="submit()"><Strong>Submit</Strong></button>
    </div>
  </div>

</div>
