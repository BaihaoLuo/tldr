            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
          <a href="/" class="navbar-brand" style="color: #fff;" onMouseOver="this.style.backgroundColor='#13967c'"
          onMouseOut="this.style.backgroundColor='#15a98c'"><b>tldr</b></a>
        </div>

        <nav class="collapse navbar-collapse" role="navigation">
          <ul class="nav navbar-nav">
            <li>
              <a href="#new" style="color: #fff;" onMouseOver="this.style.backgroundColor='#13967c'"
              onMouseOut="this.style.backgroundColor='#15a98c'">New</a>
            </li>
