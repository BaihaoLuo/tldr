            <li>
              <a href="/articles" style="color: #fff;" onMouseOver="this.style.backgroundColor='#13967c'"
              onMouseOut="this.style.backgroundColor='#15a98c'">Articles</a>
            </li>
          </ul>
          <ul class="nav navbar-nav pull-right">
            <li>
              <a href="/newArticle" style="color: #fff;" onMouseOver="this.style.backgroundColor='#13967c'"
              onMouseOut="this.style.backgroundColor='#15a98c'">Add Article</a>
            </li>
            <li>
              <a href="/newBlog" style="color: #fff;" onMouseOver="this.style.backgroundColor='#13967c'"
              onMouseOut="this.style.backgroundColor='#15a98c'">Add Blog</a>
            </li>
            
            <li>
              <a href="/about" style="color: #fff;" onMouseOver="this.style.backgroundColor='#13967c'"
              onMouseOut="this.style.backgroundColor='#15a98c'">About</a>
            </li>
            <li>
              <% if (req.session.user == null) { %>
                <a href="/login"><span class="btnS">Sign In</span></a>
              <% } else { %>
                <div class="mainmenu" id="mainmenu">
                  <div class="menu">
                    <div><%- req.session.user.email %></div>
                    <div class="popup">
                      <div ng-controller="loginController">
                        <a href="/logout">Logout</a>
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>
            </li>
          </ul>
        </nav>
      </div>
    </nav>

