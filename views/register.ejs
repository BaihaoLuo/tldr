<h1>Register</h1>

<div ng-controller="registerController">

  <div class="col-md-6">
    <form>
      <div class="form-group">
        <label>Email</label>
        <input class="form-control" ng-model="email" type="email"></input>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input class="form-control" ng-model="password" type="password"></input>
      </div>
      <div class="form-group">
        <label>Confirm password</label>
        <input class="form-control" ng-model="confirmPassword" type="password"></input>
      </div>

      <div><button class="btn btn-primary" ng-click="register()">Register</div>
    </form>
  </div>

</div>
