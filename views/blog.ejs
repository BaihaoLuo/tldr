<div class="col-md-8">

  <h1><%- blog.title %></h1>

  <div ng-controller="blogSourceController" ng-init="blogSources=[]">
    <label>Sources</label>
    <div ng-repeat="blogSource in blogSources">
      <a href="/article/{{ blogSource.article.id }}">{{ blogSource.article.title }}</a>
    </div>
  </div>

  <hr>
  <p><%- blog.content %></p>

  <hr>

  <div ng-controller="commentController">
    <label>Join the discussion</label>
    <textarea class="form-control" ng-model="comment"></textarea>
    <br>
    <button
    class="btnS btn-primary btn pull-right"
    ng-click="submitBlogComment()">
      <b>Comment</b>
    </button>
    <br>
    <br>
    <hr>
    <div ng-repeat="comment in comments">
      <p>{{ comment.content }}</p>
      <hr>
    <div>
  </div>

</div>

<script type="text/javascript">
  var blog = $.parseJSON('<%- JSON.stringify(blog) %>');
  var isArticle = false;
  var isBlog = true;
</script>
